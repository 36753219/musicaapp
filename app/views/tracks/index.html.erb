<p id="notice"><%= notice %></p>

<h1>Listing Tracks</h1>

<table class="table table-bordered table-striped" id sortable>
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.Name %></td>
        <td><%= track.Artist %></td>
        <td><%= track.Album %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Track', new_track_path %>

<br>

<div>
<%= form_tag(sporify_search_path, method: :get) do |f| %>
  <%= text_field_tag :title %>
  <%= submit_tag "Search" %>
<% end %>
</div>