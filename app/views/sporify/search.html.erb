<h1>Search Results</h1>

 <table class="table table-bordered table-striped" id sortable>
  <thead>
    <tr>
      <th>Name</th>
      <th>Album</th>
      <th>Artist</th>
    </tr>
  </thead>

  <tbody>
    <% @results.each do |result| %>
      <tr>
        <td><%= result.name %></td>
        <td><%= result.album.name %></td>
        <td><%= result.artists[0].name %></td>
      </tr>
    <% end %>
  </tbody>
</table>